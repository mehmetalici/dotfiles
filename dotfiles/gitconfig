# ~/.gitconfig

[user]
    name = Mehmet Alici
    email = calientesea@gmail.com

[core]
    editor = vim
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --graph --pretty=oneline --abbrev-commit --decorate --all

[push]
    default = simple

[color]
    ui = auto

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff
