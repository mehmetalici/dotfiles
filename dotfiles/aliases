# ~/.aliases

# Navigation aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Git aliases
alias gs='git status --short'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gl='git log --oneline --graph --decorate --all'

# System aliases
alias update='sudo apt update && sudo apt upgrade -y'
alias c='clear'

# Networking aliases
alias ip='ip a'

# Convenience
alias cls='clear && ls'
alias h='history'
alias vi='vim'
